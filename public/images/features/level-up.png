<svg width="600" height="400" xmlns="http://www.w3.org/2000/svg">
    <defs>
        <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#f3e8ff;stop-opacity:1"/>
            <stop offset="100%" style="stop-color:#ffffff;stop-opacity:1"/>
        </linearGradient>
        <filter id="shadow" x="-20%" y="-20%" width="140%" height="140%">
            <feGaussianBlur in="SourceAlpha" stdDeviation="5"/>
            <feOffset dx="0" dy="4"/>
            <feComponentTransfer>
                <feFuncA type="linear" slope="0.2"/>
            </feComponentTransfer>
            <feMerge>
                <feMergeNode/>
                <feMergeNode in="SourceGraphic"/>
            </feMerge>
        </filter>
    </defs>
    <rect width="100%" height="100%" fill="url(#bgGrad)" rx="20"/>
    
    <!-- Chat Bubbles -->
    <g transform="translate(50,50)" filter="url(#shadow)">
        <circle cx="60" cy="60" r="40" fill="#ffffff"/>
        <image href="{{ $sampleImages[0] }}" x="20" y="20" width="80" height="80" clip-path="circle(40px at 40px 40px)"/>
    </g>
    <g transform="translate(200,100)" filter="url(#shadow)">
        <circle cx="60" cy="60" r="40" fill="#ffffff"/>
        <image href="{{ $sampleImages[1] }}" x="20" y="20" width="80" height="80" clip-path="circle(40px at 40px 40px)"/>
    </g>
    <g transform="translate(150,250)" filter="url(#shadow)">
        <circle cx="60" cy="60" r="40" fill="#ffffff"/>
        <image href="{{ $sampleImages[2] }}" x="20" y="20" width="80" height="80" clip-path="circle(40px at 40px 40px)"/>
    </g>
</svg> 